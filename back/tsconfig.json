{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ], 
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}